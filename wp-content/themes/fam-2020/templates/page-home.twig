			<img class="celular" src="{{ site.theme.link }}/images/celular.png">
			</div>
	</div>	
	<section id="home-app" class="container redesocial">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<h1 style="display:block;position:relative;width:480px;left:20px;top:1px;color:#444;">#SejaFAM e mostre pra gente</h1>
