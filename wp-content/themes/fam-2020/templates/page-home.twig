{% extends 'layout/base.twig' %}

{# Vídeos do YouTube #}
{# Referência da API: https://github.com/madcoda/php-youtube-api/wiki/api-reference #}
{% set playlist = post.custom.youtube_playlist %}

{% if playlist %}
{# {% set videosYT = YT.getPlaylistItemsByPlaylistId(playlist)|slice(0, 3) %} #}
{% endif %}

{# Slider #}
{% block slider %}
	<div id="slide" class="slide">
		{{ function ('do_shortcode', '[rev_slider alias="home"]') }}
		<div class="scroll-down">
			<a class="scroll" href="#carrosel-videos-home"><i class="fa fa-chevron-down" aria-hidden="true"></i></a>
		</div>
	</div>

{% endblock %}

{% block body %}	
	<section class="socialItem videos">	
		<div class="container">
			<div class="row">
				<h1 style="display:block;position:relative;float:left;width:140px;left:20px;">YouTube</h1>
				&emsp;<hr style="display:block;position:relative;width:83%;height:1px;left:10px;top:8px;background-color:#444;"/>
				<br><br>				

				<div class="col-lg-6">
					<div class="videoBig wow fadeInDown">
						<br><br>
						<iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{videos[0].snippet.resourceId.videoId}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					</div>

					<div class="row">
						<div class="col-lg-6">
							<div class="videoSmall wow fadeInUp">
								<iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{videos[1].snippet.resourceId.videoId}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
							</div>
						</div>

						<div class="col-lg-6">
							<div class="videoSmall wow fadeInUp">
								<iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{videos[2].snippet.resourceId.videoId}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-6">
					<div class="title-social">
						{{ post.custom.chamada }}
					</div>
					
					<div class="desc-social">
						{{ post.custom.chamada_texto }}
					</div>
					
				{% if post.custom.chamada_video_id %}
					<div class="videoMid wow fadeInRight">
						<iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{ post.custom.chamada_video_id }}" frameborder="0" allowfullscreen></iframe>
					</div>
				{% endif %}
				</div>
			</div>
			<br><hr><br>
			
			<div class="row">
				<div class="col-lg-12">
					<h1 style="display:block;position:relative;width:280px;left:20px;top:1px;color:#444;">Fique por Dentro</h1>
					<h2 style="display:block;position:relative;width:336px;left:20px;top:-10px;color:#aaa;">do que acontece na FAM</h2>
					<hr style="display:block;position:relative;margin:0 auto;width:97%;height:1px;top:20px;background-color:#444;"/>
					<img style="display:block;position:relative;margin:0 auto;width:260px;top:-5px;" src="{{ site.theme.link }}/images/logosocial.png">
					<br>				
				</div>				
			</div>
			<div class="row">
				<p> <a href="{{dicas[0].link}}">{{dicas[0].name}}</a></p>

			</div>	
		</div>
	</section>	
	<section id="home-app" class="container">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="down">Baixe o app da fam</div>
				</div>
			</div>
		</div>

		<div class="container">
			<div class="row">				
				<div class="col-lg-12 dl">
					<div class="down-itens-all">
						{# App Store #}
						<a href="https://itunes.apple.com/br/app/fam-faculdade-de-americana/id1283307075?mt=8" rel="noopener nofollow">
							<div class="down-itens">
								<img src="{{ site.theme.link }}/images/down-01.png">
							</div>
						</a>

						{# Play Store #}
						<a href="https://play.google.com/store/apps/details?id=com.PSX&hl=pt" rel="noopener nofollow">
							<div class="down-itens">
								<img src="{{ site.theme.link }}/images/down-03.png">
							</div>	
						</a>			
		
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}